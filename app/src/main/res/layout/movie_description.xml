<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_card"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
            android:id="@+id/image_card_view"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_190"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_5"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/lookbeyond"/>
    </androidx.cardview.widget.CardView>
    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_toRightOf="@+id/image_card_view"
            android:layout_toEndOf="@+id/image_card_view"
            android:textSize="@dimen/sp_16"
            android:ellipsize="end"
            android:textColor="@color/yellowChrome"
            android:text="@string/defaultText"
            android:lines="1" />
    <FrameLayout
        android:id="@+id/progress_bar_container"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_toRightOf="@+id/image_card_view"
        android:layout_toEndOf="@+id/image_card_view"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_5">
        <com.budiyev.android.circularprogressbar.CircularProgressBar
            android:id="@+id/circular_progress_bar"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            app:animateProgress="true"
            app:backgroundStrokeColor="@color/darkGray"
            app:backgroundStrokeWidth="@dimen/dp_2"
            app:drawBackgroundStroke="false"
            app:foregroundStrokeColor="@color/brightYellow"
            app:foregroundStrokeWidth="@dimen/dp_3"
            app:maximum="100"
            app:progress="80"
            app:progressAnimationDuration="100"
            app:startAngle="270">
        </com.budiyev.android.circularprogressbar.CircularProgressBar>
        <TextView
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_percent"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"/>
    </FrameLayout>
    <TextView
        android:id="@+id/date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/progress_bar_container"
        android:layout_toEndOf="@+id/progress_bar_container"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_5"
        android:text="@string/default_date"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_bar_container"
        android:layout_toRightOf="@+id/image_card_view"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_toEndOf="@+id/image_card_view"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_22"
        android:layout_marginEnd="@dimen/dp_22"
        android:textSize="@dimen/sp_16"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/textColor"
        android:text="@string/defaultText" />
    <RelativeLayout
        android:id="@+id/arrow"
        android:layout_width="@dimen/dp_20"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_forward"/>
    </RelativeLayout>
</RelativeLayout>